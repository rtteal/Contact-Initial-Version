<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.contact" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.contact.views.ContactActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ContactDetailActivity"></activity>
        <activity android:name=".views.ProfileActivity"></activity>
        <activity android:name=".views.EditProfileActivity"></activity>
        <activity android:name=".views.RequestsActivity"></activity>
        <activity android:name=".views.RequestDetailActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
